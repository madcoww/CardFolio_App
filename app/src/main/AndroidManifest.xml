<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.CardFolio_App"
        tools:targetApi="31"
        android:hardwareAccelerated="true">

        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.Diary.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"
            android:theme="@style/Theme.Diary.NoActionBar"/>

        <activity android:name=".RegisterActivity"
            android:theme="@style/Theme.Diary.NoActionBar"/>

        <activity android:name=".RegisterDoneActivity"
            android:theme="@style/Theme.Diary.NoActionBar"/>

        <activity android:name=".RequestModifyPasswordActivity"
            android:theme="@style/Theme.Diary.NoActionBar"/>

        <activity android:name=".RegisterCardActivity"
            android:theme="@style/Theme.Diary.NoActionBar"/>

        <activity
            android:name=".ModifyCardActivity"
            android:exported="false" />

        <activity android:name=".ViewCardActivity"
            android:theme="@style/Theme.Diary.NoActionBar"/>

        <activity android:name=".ShareCardActivity"
            android:theme="@style/Theme.Diary.NoActionBar"/>>

        <activity android:name=".ViewMypage"
            android:theme="@style/Theme.Diary.NoActionBar"/>
    </application>

</manifest>