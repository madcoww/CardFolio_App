<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--  포커스  -->
    <item android:state_focused="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/blue"/>
        </shape>
    </item>

    <!--  기본 상태  -->
    <item>
        <shape>
            <stroke android:width="1dp" android:color="#80E7E7E7"/>
            <solid android:color="#80E7E7E7"/>
            <corners android:radius="4100dp" />
            <padding android:left="@dimen/margin_md"
                     android:right="@dimen/margin_md"/>
        </shape>
    </item>
</selector>